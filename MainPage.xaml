<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyAPITestMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry x:Name="EntryConvertValue" Placeholder="Enter Amount" HorizontalOptions="Fill" Margin="0,50,0,0" Keyboard="Numeric"/>
            <Picker x:Name="PickerCurrency" HorizontalOptions="Fill"/>

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                
                HorizontalOptions="Fill" />

            <Label
                x:Name="LabelOutput"
                Text="Exchange Rate Output"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Currency Converter App" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
